@model Food
@{
    ViewData["Title"] = "Nova doação";
}
<form>
    <div class="mb-2">
        <input asp-for="FoodId" />
        <div class="form-floating">
            <input asp-for="Name" class="form-control" />
            <label asp-for="Name"></label>
        </div>
        <div class="form-floating">
            <input asp-for="Description" class="form-control" />
            <label asp-for="Description"></label>
        </div>
        <div class="form-floating">
            <input asp-for="ManufacturedAt" class="form-control" />
            <label asp-for="ManufacturedAt"></label>
        </div>
        <div class="form-floating">
            <input asp-for="ExpireAt" class="form-control" />
            <label asp-for="ExpireAt"></label>
        </div>
        <div class="form-group">
            <input asp-for="IsPerishable" type="radio" value="true" id="true" />
            <label for="true">Perecível?</label>
            <input asp-for="IsPerishable" type="radio" value="false" id="false" />
            <label for="false">Não Perecível</label>
        </div>
        <div class="form-floating">
            <select
                asp-for="Type"
                asp-items="@Html.GetEnumSelectList<FoodType>()"
                class="form-select"
            >
                <option hidden selected>Selecione o tipo</option>
            </select>
            <label asp-for="Type"></label>
        </div>
        <div class="form-floating">
            <input asp-for="UrlImage" class="form-control" />
            <label asp-for="UrlImage">Informe a url da imagem</label>
        </div>
        <div class="form-floating">
            <select
                asp-for="UserId"
                asp-items="ViewBag.users"
                class="form-select"
            >
                <option hidden selected>Selecione o doador</option>
            </select>
            <label asp-for="User">Informe o Doador</label>
        </div>
    </div>
</form>