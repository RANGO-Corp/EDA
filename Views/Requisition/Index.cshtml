@model List<Requisition>
@{
    ViewData["Title"] = "Solicitações";
}
@if(Model.Count == 0)
{
    <div class="card mb-3">
        <div class="card-body d-flex align-items-center flex-column text-center">
            Você não possui nenhuma solicitação ativa no momento.
            <a
                asp-controller="Food"
                asp-action="Index"
                class="btn btn-link"
            >
                Que tal conferir os alimentos disponíveis?
            </a>
        </div>
    </div>
}

<div class="card-deck">
    @foreach(var order in Model)
    {
        var orderSeverity = order.Status.GetAttribute<StyleAttribute>().Severity;
        var orderType = order.Status.GetAttribute<DisplayAttribute>().Name;
        var hasMessage = order.Message.Length > 0;
        var hasAction = order.Status.CompareTo(Status.AWAITING) == 0;

        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <span
                        condition="@order.Food.IsPerishable.GetValueOrDefault(false)"
                        class="badge bg-dark text-white position-absolute top-0 end-0 mx-2 my-2"
                    >
                        Perecível
                    </span>
                    <img
                        src="@order.Food.UrlImage"
                        class="img-fluid h-100" 
                        alt="..."
                    />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <div class="d-flex justify-content-between align-items-center">
                                @order.Food.Name
                                <span class="badge bg-@orderSeverity ms-1">@orderType</span>
                            </div>
                        </h5>
                        <p
                            condition="@hasMessage"
                            class="card-text"
                        >@order.Message</p>
                        <p class="card-text">
                            <small class="text-muted">Solicitação por: @order.Receiver.Name/small>
                        </p>
                    </div>
                    <div
                        condition="@hasAction"
                        class="card-footer"
                    >
                        <div class="d-flex justify-content-end">
                            <div class="btn-group">
                                <a href="#" class="btn btn-outline-danger">Recusar</a>
                                <a href="#" class="btn btn-outline-success">Aprovar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>