@model List<User>
@{
    ViewData["Title"] = "Usuários";
}

@if(Model.Count == 0)
{
    <div class="card mb-3">
        <div class="card-body d-flex justify-content-between align-items-center flex-column">
            Nenhum usuário cadastrado no momento.
            <a
                asp-controller="Login"
                asp-action="Register"
                class="btn btn-link"
            >
                Que tal ser o primeiro?
            </a>
        </div>
    </div>
}

<div class="users">
    @foreach(var user in Model)
    {
        <div class="card mb-3 user-list">
            <div class="card-header">@user.Name</div>
            <div class="d-flex align-items-center p-2">
                <div class="img-wrapper me-1">
                    <img
                        src="@user.Photo"
                        class="img-fluid"
                        alt="Avatar de @user.Name"
                    />
                </div>
                <ul class="list-group list-group-flush flex-grow-1">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="me-auto">
                            <div class="">Total de alimentos cadastrados</div>
                        </div>
                        <span class="badge bg-secondary">14</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="me-auto">
                            <div class="">Membro desde</div>
                        </div>
                        <span class="badge bg-secondary">@user.CreatedAt.ToShortDateString()</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="me-auto">
                            <div class="">Localizado em</div>
                        </div>
                        <span class="badge bg-secondary">@user.Address?.City/@user.Address?.State</span>
                    </li>
                </ul>
            </div>
        </div>
    }
</div>
